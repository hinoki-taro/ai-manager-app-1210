# ==========================================
# 認証設定（推奨）
# ==========================================
# 社内限定公開のための強化されたアクセス制御
[auth]
# アクセスパスワード（必須）
password = "your_secure_password_here"

# セッションタイムアウト（分）- デフォルト: 60
session_timeout_minutes = 60

# 最大ログイン試行回数（10分間）- デフォルト: 5
max_login_attempts = 5

# IPアドレスホワイトリスト（オプション、カンマ区切り）
# ip_whitelist = "192.168.1.1,192.168.1.2"

# ==========================================
# セキュリティ機能
# ==========================================
# - ログイン試行回数制限（デフォルト: 10分間に5回）
# - セッションタイムアウト（デフォルト: 60分）
# - アクセスログ記録
# - 入力のサニタイゼーション
# - XSRF保護
# ==========================================

# ==========================================
# Google Drive Service Account (WEBデプロイ用・オプション)
# ==========================================
# WEBアプリでGoogle Drive連携を使用する場合に設定します。
# Google Cloud Consoleでサービスアカウントキー(JSON)をダウンロードし、
# その内容をここに貼り付けてください。
#
# 【設定手順】
# 1. Google Cloud Console → IAMと管理 → サービスアカウント
# 2. サービスアカウントを作成
# 3. キーを作成（JSON形式）
# 4. ダウンロードしたJSONの内容を以下に貼り付け
# 5. Google Driveで共有したいフォルダをサービスアカウントに共有
# ==========================================

[google_drive_service_account]
type = "service_account"
project_id = "your-project-id"
private_key_id = "your-private-key-id"
private_key = "-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
client_email = "your-service-account@your-project.iam.gserviceaccount.com"
client_id = "your-client-id"
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url = "https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40your-project.iam.gserviceaccount.com"

